<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.softwork.ydk_lsj.dessin.AddScheduleActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스케줄 작성"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="@dimen/spinner_text_width"
                android:text="시작일"/>
            <Spinner
                android:id="@+id/start_year_spinner"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height">
            </Spinner>
            <TextView
                android:layout_width="@dimen/spinner_text_width"
                android:layout_height="@dimen/spinner_text_height"
                android:text="년"/>
            <Spinner
                android:id="@+id/start_month_spinner"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height">
            </Spinner>
            <TextView
                android:layout_width="@dimen/spinner_text_width"
                android:layout_height="@dimen/spinner_text_height"
                android:text="월"/>
            <Spinner
                android:id="@+id/start_day_spinner"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height">
            </Spinner>
            <TextView
                android:layout_width="@dimen/spinner_text_width"
                android:layout_height="@dimen/spinner_text_height"
                android:text="일"/>
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <TextView
            android:layout_width="50dp"
            android:layout_height="@dimen/spinner_text_width"
            android:text="종료일"/>
        <Spinner
            android:id="@+id/end_year_spinner"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="@dimen/spinner_height">
        </Spinner>
        <TextView
            android:layout_width="@dimen/spinner_text_width"
            android:layout_height="@dimen/spinner_text_height"
            android:text="년"/>
        <Spinner
            android:id="@+id/end_month_spinner"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="@dimen/spinner_height">
        </Spinner>
        <TextView
            android:layout_width="@dimen/spinner_text_width"
            android:layout_height="@dimen/spinner_text_height"
            android:text="월"/>
        <Spinner
            android:id="@+id/end_day_spinner"
            android:layout_width="@dimen/spinner_width"
            android:layout_height="@dimen/spinner_height">
        </Spinner>
        <TextView
            android:layout_width="@dimen/spinner_text_width"
            android:layout_height="@dimen/spinner_text_height"
            android:text="일"/>
    </LinearLayout>

        <EditText
            android:id="@+id/title_edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="제목"/>

        <EditText
            android:id="@+id/info_edit"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:ems="3"
            android:hint="내용"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <Spinner
                android:id="@+id/add_year_spinner"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height">
            </Spinner>
            <TextView
                android:layout_width="@dimen/spinner_text_width"
                android:layout_height="@dimen/spinner_text_height"
                android:text="년"/>
            <Spinner
                android:id="@+id/add_month_spinner"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height">
            </Spinner>
            <TextView
                android:layout_width="@dimen/spinner_text_width"
                android:layout_height="@dimen/spinner_text_height"
                android:text="월"/>
            <Spinner
                android:id="@+id/add_day_spinner"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height">
            </Spinner>
            <TextView
                android:layout_width="@dimen/spinner_text_width"
                android:layout_height="@dimen/spinner_text_height"
                android:text="일"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </ScrollView>

    </LinearLayout>

</RelativeLayout>